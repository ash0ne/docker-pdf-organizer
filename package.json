{
  "release": {
    "branches": ["main", {"name": "pre-release", "prerelease": true}]
  },
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    ["@semantic-release/changelog", {
      "changelogFile": "CHANGELOG.md"
    }],
    ["@semantic-release/git", {
      "assets": ["CHANGELOG.md", "package.json"],
      "message": "chore(release): ${nextRelease.version} [skip ci]\n\n Committing release assets"
    }],
    "@semantic-release/github"
  ],
  "name": "docker-pdf-server",
  "private": true,
  "version": "0.0.0",
  "description": "An ultra-minimalist PDF server running on Docker",
  "author": "ash0ne",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ash0ne/docker-pdf-server.git"
  }
}
